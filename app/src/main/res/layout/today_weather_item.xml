<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/todayWeatherItem"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:background="@drawable/card_icon_bg"
        android:backgroundTint="#E8E7E7"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/hourlyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:text="8:00 PM"
            android:textColor="#262626"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hourlyIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/current_weather_image"
            app:layout_constraintBottom_toTopOf="@+id/hourlyTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hourlyTime"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/hourlyTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:includeFontPadding="false"
            android:text="26Â°"
            android:textColor="#262626"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>